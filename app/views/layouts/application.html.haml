  %body

    .container
      = render('layouts/partials/osu-nav-bar.html')
      .container-fluid.inner-container
        .row-fluid
          .span12.header-container
            %h1
              = link_to 'Welcome to Opic!', root_url, :title => "An Ohio State University Avatar Service"
              %small= link_to 'An Ohio State University Avatar Service', root_url
        .row-fluid
          .span12.body-container
            = bootstrap_flash
            = yield
      .container-fluid.footer-container
        .row-fluid
          .span12
            %footer
              %p &copy; #{Time.now.year}, ASC Technology Services. All rights reserved.
              %p= link_to 'Information for Developers', developers_url
    
    = javascript_include_tag "application"
